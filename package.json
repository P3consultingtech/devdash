{
  "name": "devdash",
  "version": "0.1.0",
  "private": true,
  "description": "Self-hosted dashboard for freelancers and SMBs to manage clients, invoices and finances",
  "license": "MIT",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "db:migrate": "pnpm --filter @devdash/api exec prisma migrate dev",
    "db:seed": "pnpm --filter @devdash/api exec prisma db seed",
    "db:studio": "pnpm --filter @devdash/api exec prisma studio",
    "clean": "turbo clean && rimraf node_modules"
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
