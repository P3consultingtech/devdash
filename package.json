{
  "name": "devdash",
  "version": "0.1.0",
  "private": true,
  "description": "Self-hosted dashboard for freelancers and SMBs to manage clients, invoices and finances",
  "license": "MIT",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "db:migrate": "pnpm --filter @devdash/api exec prisma migrate dev",
    "db:seed": "pnpm --filter @devdash/api exec prisma db seed",
    "db:studio": "pnpm --filter @devdash/api exec prisma studio",
    "clean": "turbo clean && rimraf node_modules",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.15.9",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.0",
    "turbo": "^2.8.3",
    "typescript-eslint": "^8.54.0"
  }
}
