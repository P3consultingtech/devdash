# Database
DATABASE_URL=postgresql://devdash:devdash@localhost:5432/devdash

# JWT — use at least 32 random characters in production
# Generate with: openssl rand -hex 32
JWT_SECRET=change-me-in-production-use-a-random-64-char-string
JWT_REFRESH_SECRET=change-me-too-use-a-different-random-64-char-string
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Server
API_PORT=3001
NODE_ENV=development

# CORS — frontend origin allowed to call the API
CORS_ORIGIN=http://localhost:5173
